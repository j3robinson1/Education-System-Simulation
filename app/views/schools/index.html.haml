%h1 schools
= link_to new_school_path do
  %span.glyphicon.glyphicon-plus
  School
=form_tag schools_path, method: :get, class: "form-search", role: "search" do
  .input-group
    =text_field_tag 'search', params[:search], class: "form-control", id: "srch-term", placeholder: "Search"
    .input-group-btn
      %button.btn.btn-default{:style => "width:40px;"}
        %span.glyphicon.glyphicon-search
  %br
  - @schools.each do |school|
    = link_to school_path(school) do
      %i.btn.btn-default
        = school.name
    %br
    %br