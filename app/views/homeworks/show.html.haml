%h1 homework
%h3
  Name: #{@homework.name}
  %br
  Description: #{@homework.description}
  %br
  = link_to edit_user_homework_path(@user, @homework) do
    %i.btn.btn-default
      %span.glyphicon.glyphicon-edit{class: 'glyph'}
  = link_to user_homework_path(@user, @homework), method: :delete do
    %i.btn.btn-default
      %span.glyphicon.glyphicon-trash{class: 'glyph'}